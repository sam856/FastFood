@using FastFoodModels
@model Cart

<h2>Item Details</h2>

<form method="post" >
    <div class="row">
        <div class="col-4">
            @if (Model.Item.Image != null && Model.Item.Image.Length > 0)
            {
                <img src="data:image;base64,@Convert.ToBase64String(Model.Item.Image)" alt="Item Image" class="card-img-top" />
                <input type="hidden"  asp-for="ItemId"/>
            }
            else
            {
                <span>No Image Available</span>
            }

        </div>
        <div class="col-8">
            <div class="row">
                <div class="col">
                    <label asp-for="Item.Title">Product name:</label>
                    <p>@Model.Item.Title</p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label asp-for="Item.Description">Description:</label>
                    <p>@Model.Item.Description</p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label asp-for="Item.Price">Price:</label>
                    <p>@Model.Item.Price</p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label asp-for="Item.Category.Id">Category:</label>
                    <p>@Model.Item.Category.Title</p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label asp-for="Item.SubCategory.Id">SubCategory:</label>
                    <p>@Model.Item.SubCategory.Title</p>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col">
                        <label asp-for="Count">Count:</label>
                      


                        <input asp-for="Count" class="form-control" />
                        <span asp-validation-for="Count" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col">
                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
